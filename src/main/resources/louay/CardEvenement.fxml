<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="pi_project.louay.Controller.CardEvenementController"
      spacing="15"
      alignment="CENTER"
      style="-fx-border-color: #bbb; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 20; -fx-background-color: #fafafa; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 4);">

    <!-- Titre de l'événement -->
    <Label fx:id="titreLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-underline: true; -fx-padding: 0 0 10 0;"/>

    <!-- Type de l'événement -->
    <Label fx:id="typeLabel" style="-fx-font-size: 16px; -fx-text-fill: #777;"/>

    <!-- Date de début et de fin -->
    <Label fx:id="dateDebutLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
    <Label fx:id="dateFinLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>

    <!-- Lieu de l'événement -->
    <Label fx:id="lieuLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>

    <!-- Informations d'inscription -->
    <Label fx:id="inscriptionRequiseLabel" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>

    <!-- Places restantes -->
    <Label fx:id="placesRestantesLabel" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-font-weight: bold;"/>

    <!-- Timer -->
    <Label fx:id="timerLabel" style="-fx-font-size: 14px; -fx-text-fill: #FF5722;"/>

    <!-- Bouton de réservation -->
    <Button fx:id="reserverBtn" text="Réserver" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">

    </Button>
</VBox>
