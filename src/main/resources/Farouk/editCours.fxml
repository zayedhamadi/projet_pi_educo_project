<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pi_project.Farouk.Controller.EditCoursController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@Css/cours-style.css"
            spacing="20" style="-fx-padding: 30; -fx-background-color: #f8fafc;">
>

    <Label text="✏️ Edit Course" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

    <GridPane hgap="15" vgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Course Name:" style="-fx-font-weight: bold;" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Matière ID:" style="-fx-font-weight: bold;" GridPane.rowIndex="1"/>
        <TextField fx:id="matiereIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Classe:" style="-fx-font-weight: bold;" GridPane.rowIndex="2"/>
        <TextField fx:id="classeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="PDF File:" style="-fx-font-weight: bold;" GridPane.rowIndex="3"/>
        <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <Label fx:id="pdfLabel" style="-fx-text-fill: #64748b;"/>
            <Button text="Browse" onAction="#handleBrowse" style="-fx-background-color: #e2e8f0; -fx-text-fill: #1e293b;"/>
        </HBox>

        <HBox spacing="15" GridPane.rowIndex="4" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #e2e8f0; -fx-text-fill: #1e293b;"/>
            <Button text="Save Changes" onAction="#handleSave" style="-fx-background-color: #4f46e5; -fx-text-fill: white;"/>
        </HBox>
    </GridPane>
</VBox>
