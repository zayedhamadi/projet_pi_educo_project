<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- QuizHistoryCard.fxml -->
<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pi_project.Aziz.Controller.QuizHistoryCardController"
      fx:id="cardContainer"
      spacing="20" style="-fx-padding: 15; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">

    <VBox spacing="5" HBox.hgrow="ALWAYS">
        <Label fx:id="quizNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <ProgressBar fx:id="scoreProgress" style="-fx-accent: #3498db; -fx-pref-height: 8;"/>
    </VBox>

    <Label fx:id="scoreLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3498db; -fx-alignment: CENTER_RIGHT;"
           minWidth="60"/>
</HBox>