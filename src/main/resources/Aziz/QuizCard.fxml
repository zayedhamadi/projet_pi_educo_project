<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="quizCard" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pi_project.Aziz.Controller.QuizCardController">
    <VBox style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 10;">
        <Label fx:id="quizTitle" style="-fx-font-weight: bold; -fx-font-size: 14pt;"/>
        <Label fx:id="quizDescription"/>
        <Label fx:id="quizSubject" style="-fx-text-fill: #666;"/>
        <Label fx:id="quizClass" style="-fx-text-fill: #666;"/>
        <Label fx:id="quizDate" style="-fx-text-fill: #666;"/>
        <Button text="Start Quiz" onAction="#handleStartQuiz" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </VBox>
</Pane>