<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pi_project.Saif.Controller.ModifierCategorieView"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff; -fx-padding: 20px;">

    <!-- Titre de la fenêtre -->
    <Text text="Modifier une catégorie" layoutX="200" layoutY="30" style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #333;"/>

    <!-- Champ ID -->
    <TextField fx:id="tfId" layoutX="40.0" layoutY="80.0" promptText="ID" style="-fx-padding: 10px; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9;"/>

    <!-- Champ Nom -->
    <TextField fx:id="tfNom" layoutX="40.0" layoutY="120.0" promptText="Nom" style="-fx-padding: 10px; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9;"/>

    <!-- Champ Description -->
    <TextField fx:id="tfDescription" layoutX="40.0" layoutY="160.0" promptText="Description" style="-fx-padding: 10px; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9;"/>

    <!-- Bouton Modifier -->
    <Button layoutX="40.0" layoutY="210.0" onAction="#modifierCategorie" text="Modifier"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 10px 20px;"/>

</AnchorPane>
