<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #f4f6f8;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pi_project.Saif.Controller.AdminCommandeController">

    <!-- Top Section with Search -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="             -fx-background-color: #34495e;             -fx-padding: 20;             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);">

            <Label style="-fx-font-family: 'Segoe UI', sans-serif;                           -fx-font-size: 28px;                           -fx-font-weight: bold;                           -fx-text-fill: white;" text="Gestion des Commandes" />

            <TextField fx:id="searchField" promptText="Rechercher par mot-clé" style="-fx-pref-width: 250px; -fx-padding: 5;" />

            <Button onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white;                            -fx-padding: 8 12; -fx-font-size: 14px;" text="Rechercher" />
        </HBox>
    </top>

    <!-- Center Section with TableView -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">

            <TableView fx:id="tableCommande" prefHeight="391.0" prefWidth="688.0" style="-fx-background-color: white;                               -fx-border-radius: 12px;                               -fx-background-radius: 12px;                               -fx-border-color: transparent;                               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 4);">

                <columns>
                    <TableColumn fx:id="dateCommandeColumn" prefWidth="180" text="Date de Commande" />
                    <TableColumn fx:id="montantTotalColumn" prefWidth="150" text="Montant Total (€)" />
                    <TableColumn fx:id="statutColumn" prefWidth="120" text="Statut" />
                    <TableColumn fx:id="actionColumn" prefWidth="160" text="Actions" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
