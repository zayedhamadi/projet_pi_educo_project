<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pi_project.Saif.Controller.PaiementStripeController"
      spacing="25"
      alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #ffffff, #f0f0f0); -fx-padding: 40;">

    <Label fx:id="totalLabel"
           style="-fx-font-size: 22px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

    <Label text="Veuillez patienter pendant la redirection vers Stripe..."
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />

    <Label fx:id="statusLabel"
           style="-fx-font-size: 14px; -fx-text-fill: #16a085;" />

    <ProgressIndicator fx:id="loadingIndicator" progress="-1.0" />


