<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.stage.FileChooser?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="pi_project.Saif.Controller.AddProduit" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #ffffff; -fx-padding: 20px;">

    <!-- Titre -->
    <Label text="Ajouter un Nouveau Produit" layoutX="200" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #333;"/>

    <!-- Champ Nom du produit -->
    <TextField fx:id="nomField" promptText="Nom du produit" layoutX="100" layoutY="70" prefWidth="400" style="-fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-font-size: 14px; -fx-padding: 10px;"/>

    <!-- Champ Description du produit -->
    <TextArea fx:id="descriptionField" promptText="Description du produit" wrapText="true" layoutX="100" layoutY="130" prefWidth="400" prefHeight="80" style="-fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-font-size: 14px; -fx-padding: 10px;"/>

    <!-- Champ Prix -->
    <TextField fx:id="prixField" promptText="Prix" layoutX="100" layoutY="230" prefWidth="400" style="-fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-font-size: 14px; -fx-padding: 10px;"/>

    <!-- Champ Stock -->
    <TextField fx:id="stockField" promptText="Stock" layoutX="100" layoutY="290" prefWidth="400" style="-fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-font-size: 14px; -fx-padding: 10px;"/>

    <!-- Sélection de l'image -->
    <Label text="Choisir une image" layoutX="100" layoutY="350" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
    <Button text="Choisir Image" layoutX="100" layoutY="380" onAction="#choisirImage" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 8px 16px;"/>
    <ImageView fx:id="imageView" layoutX="250" layoutY="380" fitHeight="100" fitWidth="100" style="-fx-border-radius: 5px; -fx-border-color: #ddd; -fx-border-width: 1px;"/>

    <!-- Sélection de la catégorie -->
    <ComboBox fx:id="categorieComboBox" layoutX="100" layoutY="450" prefWidth="400" style="-fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-font-size: 14px; -fx-padding: 10px;"/>

    <!-- Bouton Ajouter Produit -->
    <Button text="Ajouter Produit" layoutX="250" layoutY="510" onAction="#ajouterProduit" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 10px 20px;"/>

</AnchorPane>
